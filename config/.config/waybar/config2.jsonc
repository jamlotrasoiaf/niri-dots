{
    "layer": "top",
    "position": "top",
    "spacing": 0,
    "height": 0,
    "margin": 0,
    
    "modules-left": [
        "image#me",
        "niri/workspaces",
        "cava"
    ],
    
    "modules-center": [
        "niri/window"
    ],

    "modules-right": [
        "idle_inhibitor",
        "custom/media"
    ],

    "image#me": {
        "path": "/home/sunny/.config/pictures/haruta.jpg",
        "size": 16,
        "on-click": "exec fuzzel",
        "on-click-right": "exec $HOME/.local/bin/logout-menu"
    },

    "niri/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "tooltip": false
    },

    "niri/window": {
	    "format": "{title}",
	    "max-length": 40
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ïˆ…",
            "deactivated": "ïˆ„",
        },
        "tooltip": false 
    },
    
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ï†¼",
            "firefox": "ï‰©",
            "vlc": "ó°•¼",
	        "mpv": "ï®",
            "default": "ğŸœ"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null",
        "on-click": "playerctl play-pause",
        "on-double-click": "playerctl next",
        "on-click-right": "playerctl previous"
    },

    "cava": {
	    "framerate": 60,
        "sleep_timer": 5,
	    "autosens": 1,
	    "bars": 20,
	    "lower_cutoff_freq": 50,
	    "higher_cutoff_freq": 10000,
	    "method": "pipewire",
	    "source": "auto",
	    "stereo": true,
	    "reverse": false,
	    "bar_delimiter": 0,
	    "monstercat": false,
	    "waves": false,
	    "noise_reduction": 0.77,
	    "input_delay": 2,

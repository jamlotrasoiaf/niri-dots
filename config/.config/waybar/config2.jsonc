{
    "layer": "top",
    "position": "top",
    "spacing": 0,
    "height": 0,
    
    "margin-top": 0,
    "margin-right": 10,
    "margin-bottom": 10,
    "margin-left": 10,
    
    "modules-left": [
        "niri/workspaces",
        "cava"
    ],
    
    "modules-center": [
        "niri/window"
    ],

    "modules-right": [
        "idle_inhibitor",
        "custom/media"
    ],

    "niri/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "tooltip": false
    },

    "niri/window": {
	    "format": "{title}",
	    "max-length": 50
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "󰻿",
            "deactivated": "⏾",
        },
        "tooltip": false 
    },
    
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 50,
        "format-icons": {
            "spotify": "",
            "firefox": "",
            "vlc": "󰕼",
	        "mpv": "",
    "default": "🎜"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null",
        "on-click": "playerctl play-pause",
        "on-double-click": "playerctl next",
        "on-click-right": "playerctl previous"
    },

    "cava": {
	    "framerate": 60,
        "sleep_timer": 5,
	    "autosens": 1,
	    "bars": 20,
	    "lower_cutoff_freq": 50,
	    "higher_cutoff_freq": 10000,
	    "method": "pipewire",
	    "source": "auto",
	    "stereo": true,
	    "reverse": false,
	    "bar_delimiter": 0,
	    "monstercat": false,
	    "waves": false,
	    "noise_reduction": 0.77,
	    "input_delay": 2,
	    "format-icons" : ["▁ ", "▂ ", "▃ ", "▄ ", "▅ ", "▆ ", "▇ ", "█ " ]
    }
}
